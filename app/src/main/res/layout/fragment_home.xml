<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="@color/color_999999"
            />

        <Button
            android:id="@+id/btn_network_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络错误"
            android:textColor="@color/color_999999"
            />

        <Button
            android:id="@+id/btn_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据为空"
            android:textColor="@color/color_999999"
            />

        <Button
            android:id="@+id/btn_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏"
            android:textColor="@color/color_999999"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <Button
            android:id="@+id/btn_no_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未登录"
            android:textColor="@color/color_999999"
            />

    </LinearLayout>



    <com.can.mvp.views.baseviews.IRecycleView
        android:id="@+id/rv_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.can.mvp.views.baseviews.IRecycleView>

</LinearLayout>